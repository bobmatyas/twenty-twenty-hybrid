{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
          "palette": [
            {
                "name": "Accent Color",
                "slug": "accent",
                "color": "var(--wp--custom--colors--red)"
            },
            {
                "name": "Primary Color",
                "slug": "primary",
                "color": "var(--wp--custom--colors--black)"
            },
            {
                "name": "Secondary Color",
                "slug": "secondary",
                "color": "var(--wp--custom--colors--grey)"
            },
            {
                "name": "Subtle Background",
                "slug": "subtle-background",
                "color": "var(--wp--custom--colors--subtle--beige)"
            },
            {
                "name": "Background",
                "slug": "background",
                "color": "var(--wp--custom--colors--light-beige)"
            }        
          ]  
        },
        "custom": {
            "colors": {
                "black": "#000",
                "red": "#cd2653",
                "beige": "#dcd7ca",
                "light-beige": "#f5efe0",
                "grey": "#6d6d6d"
            }
        },
        "layout": {
            "contentSize": "610px",
            "wideSize": "1200px"
        },
        "typography": {
            "fontSizes": [
                {
                    "slug": "small",
                    "name": "Small",
                    "size": "18px"
                },
                {
                    "slug": "normal",
                    "name": "Normal",
                    "size": "21px"
                },
                {
                    "slug": "large",
                    "name": "Large",
                    "size": "26.25px"
                },                
                {
                    "slug": "largest",
                    "name": "Largest",
                    "size": "32px"
                }
            ]
    }
    },
    "styles": {
        "color": {
            "background": "var(--wp--custom--colors--light-beige)",
            "text": "var(--wp--custom--colors--light-black)"
        },
        "typography": {
            "fontSize": "1.8rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "3.6rem"
                }             
            },
            "h2": {
                "typography": {
                    "fontSize": "3.2rem"
                }             
            },
            "link": {
                "color": {
                    "text": "var(--wp--custom--colors--red)"
                },
                "typography": {
                    "fontSize": "4.2rem"
                } 
            }
        },
        "blocks": {
            "core/quote": {
                "border": {
                    "color": "var(--wp--custom--colors--red)"
                }
            }
        }
    }
}